extends default

block header

block content
  div.profile
    div.profile-image(style=`background: url('/images/${person.image}') top center
    no-repeat; background-size: cover;`)
    div.profile-details
      h1.profile-name
        | #{person.firstname} #{person.lastname}
      h2.profile-tagline
        | #{person.tagline}
      p.profile-bio
        | #{person.bio}
      a.button.button-linkedin(href=`${person.linkedin}`)
        | Show my profile on linkedin

